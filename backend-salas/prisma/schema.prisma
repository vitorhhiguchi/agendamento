generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Sala {
  id          Int       @id @default(autoincrement())
  nome        String
  capacidade  Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  reunioes    Reuniao[]
}

model Reuniao {
  id          Int       @id @default(autoincrement())
  nomeAluno   String
  inicio      DateTime
  fim         DateTime
  salaId      Int
  sala        Sala      @relation(fields: [salaId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
